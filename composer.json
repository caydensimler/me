{
  "name": "ics/base",
  "type": "wordpress-theme",
  "description": "A blank canvas to build gorgeous themes upon.",
  "homepage": "https://github.com/icscreative/ics-base",
  "license": "proprietary",
  "authors": [
    {
      "name": "Marin Carroll",
      "email": "marin@marincarroll.com"
    }
  ],
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "wptrt/wpthemereview": "^0.2.1",
    "php-parallel-lint/php-parallel-lint": "^1.3.1",
    "wp-cli/i18n-command": "^2.2.13"
  },
  "scripts": {
    "lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
    "lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor .",
    "make-pot": "wp i18n make-pot . languages/ics-base.pot"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
